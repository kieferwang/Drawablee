<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--- 设置填充渐变颜色-->

    <gradient
        android:startColor="#E64A19"
        android:endColor="#5D4037"
        android:angle="45"/>

    <!-- 设置内填充-->

    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp"/>

    <!--设置圆角边距 -->

    <corners android:radius="8dp"/>


</shape>